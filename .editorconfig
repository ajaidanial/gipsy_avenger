# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 88

[*.{md, Rmd, rst}]
trim_trailing_whitespace = false
indent_size = 2

[*.{yml, conf}]
indent_size = 2

[{**.min.**, **/vendors/**}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
